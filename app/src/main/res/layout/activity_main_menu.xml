<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal|center_vertical"
    android:layout_margin="20dp"
    android:gravity="center_horizontal|center_vertical"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".activity.MainMenu">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:drawableLeft="@drawable/ic_database_svgrepo_com"
        android:gravity="center_horizontal"
        android:text="Penyimpanan Data (SQLite)"
        android:textSize="34sp" />

    <Button
        android:id="@+id/seeData"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="1. Lihat Data Mahasiswa" />

    <Button
        android:id="@+id/addData"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:text="2. Tambah Data Mahasiswa" />
</LinearLayout>